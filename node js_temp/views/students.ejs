<!-- students.ejs: صفحة عرض الطلاب باستخدام EJS -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Students List</title>
    <link rel="stylesheet" href="/assets/css/style.css">
</head>
<body>
    <!-- الهيدر المشترك -->
    <%- include("header.ejs", { info: std.length > 0 ? std[0].dept : "غير محدد" }) %>
    <h1>قائمة الطلاب</h1>
    <ul>
        <% std.forEach(function(student) { %>
            <li><%= student.name %> - <%= student.dept %> (ID: <%= student.id %>)</li>
        <% }); %>
    </ul>
    <!-- فورم إضافة طالب جديد -->
    <form action="/api/students" method="POST">
        <input type="text" name="name" placeholder="اسم الطالب" required minlength="3" maxlength="30">
        <input type="text" name="dept" placeholder="القسم" required minlength="2" maxlength="3">
        <button type="submit">إضافة طالب</button>
    </form>
    <!-- الفوتر المشترك -->
    <%- include("footer.ejs") %>
</body>
</html>
<!-- ملاحظة: يمكنك تخصيص التصميم أو إضافة أجزاء مشتركة (partials) مثل الهيدر والفوتر حسب الحاجة -->